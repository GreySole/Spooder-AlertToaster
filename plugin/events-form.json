{
  "show_alert": {
    "label": "Show Alert",
    "form": {
      "icon": {
        "label": "Icon",
        "type": "asset",
        "options": {
          "assetType": "image",
          "folder": "img",
          "required": false
        }
      },
      "sound": {
        "label": "Sound",
        "type": "asset",
        "options": {
          "assetType": "sound",
          "folder": "sound",
          "required": false
        }
      },
      "customBoxColor": {
        "label": "Custom Box Color",
        "type": "boolean"
      },
      "boxColor": {
        "label": "Box Color",
        "type": "color",
        "showif": {
          "variable": "customBoxColor",
          "condition": "equals",
          "value": true
        }
      },
      "borderColor": {
        "label": "Border Color",
        "type": "color",
        "showif": {
          "variable": "customBoxColor",
          "condition": "equals",
          "value": true
        }
      },
      "alerttext": {
        "label": "Alert Message",
        "type": "code",
        "options": {
          "use_response_processor": true
        }
      }
    },
    "defaults": {
      "icon": "",
      "sound": "",
      "customBoxColor": false,
      "boxColor": "#000000",
      "borderColor": "#000000",
      "alerttext": ""
    }
  },
